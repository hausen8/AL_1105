setp     hm2_7i76e.0.stepgen.03.dirhold        [JOINT_2]DIRHOLD
setp     hm2_7i76e.0.stepgen.03.steplen        [JOINT_2]STEPLEN
setp     hm2_7i76e.0.stepgen.03.stepspace      [JOINT_2]STEPSPACE
