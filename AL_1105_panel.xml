<pyvcp>
    <tabs>
        <names>["Spindle", "Coordinate Systems"]</names>
        <vbox>
            <label>
                <text>"VFD Temperature"</text>
            </label>
            <bar>
                <bgcolor>"#e5e5e5"</bgcolor>
                <fillcolor>"#00ff00"</fillcolor>
                <range1>0,50,"#80b000"</range1>
                <range2>51,100,"#ffc000"</range2>
                <range3>101,150,"#ff3000"</range3>
                <halpin>"vfd-temp"</halpin>
                <max_>150</max_>
            </bar>
            <label>
                <text>"Spindle Temperature"</text>
            </label>
            <bar>
                <bgcolor>"#e5e5e5"</bgcolor>
                <fillcolor>"#00ff00"</fillcolor>
                <range1>0,40,"#80b000"</range1>
                <range2>40,50,"#ff3000"</range2>
                <halpin>"spindle-temp"</halpin>
                <max_>50</max_>
            </bar>
            <label>
                <text>"Spindle Current"</text>
            </label>
            <bar>
                <bgcolor>"#e5e5e5"</bgcolor>
                <fillcolor>"#00ff00"</fillcolor>
                <range1>0,3.3,"#80b000"</range1>
                <range2>3.4,6.6,"#ffc000"</range2>
                <range3>6.7,10,"#ff3000"</range3>
                <halpin>"spindle-current"</halpin>
                <max_>10</max_>
            </bar>
            <label>
                <text>"Spindle Speed"</text>
            </label>
            <bar>
                <bgcolor>"#e5e5e5"</bgcolor>
                <fillcolor>"#80b000"</fillcolor>
                <halpin>"spindle-speed"</halpin>
                <max_>30000</max_>
            </bar>
            <label>
                <text>" "</text>
            </label>
            <button>
                <halpin>"warmup-button"</halpin>
                <text>"Warm-up"</text>
            </button>
            <button>
                <halpin>"start-button"</halpin>
                <text>"Start"</text>
            </button>
            <button>
                <halpin>"stop-button"</halpin>
                <text>"Stop"</text>
            </button>
            <label>
