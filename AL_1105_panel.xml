                    <text>" 20000 "</text>
                </button>
                <button>
                    <halpin>"22000-button"</halpin>
                    <text>" 22000 "</text>
                </button>
                <button>
                    <halpin>"24000-button"</halpin>
                    <text>" 24000 "</text>
                </button>
            </hbox>
            <label>
                <text>" "</text>
            </label>
            <hbox>
                <label>
                    <text>"Spindle inhibit"</text>
                    <width>12</width>
                </label>
                <rectled>
                    <halpin>"spindle-inhibit"</halpin>
                    <width>30</width>
                    <height>30</height>
                    <on_color>"#ff3000"</on_color>
                    <off_color>"#80b000"</off_color>
                </rectled>
            </hbox>
